<!-- filter modal -->
<div class="modal fade custom-width filter-modal" id="filterModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ t('search_your_files', 'Search Your Files') }}</h4>
            </div>

         <div class="modal-body" style="margin-left: 40px;margin-right: 40px;">
                <form autocomplete="off">
                    <div class="row">

                

                        <div class="col">

                            <div class="row">
          
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">&nbsp;</label>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" value="" id="filterCurrentFolder" name="folderId" CHECKED>{{ t('file_manager_current_folder', 'Current Folder') }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">&nbsp;</label>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" value="all" id="filterAllFolders" name="folderId">{{ t('file_manager_all_folders', 'All Folders') }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
              
              
              
                            <div class="row">
                              <div class="col-md-4">
                                
                                 <div class="form-group" >
                                    <label for="filename" class="control-label">File size bigger than:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="filterfilesize" id="filterfilesize" value="0">
                                        <span class="input-group-addon">MB</span>
                                    </div>
                                </div>
                                 </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                             <label for="filename" class="control-label">Downloaded less than:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="filterdownloadedLessThan" id="filterdownloadedLessThan" value="0">
                                        <span class="input-group-addon">Times</span>
                                    </div>
                                    </div>
                                </div>
                                
                           
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="filterUploadedDateRange" class="control-label">{{ t('upload_date', 'Upload Date') }}</label>
                                        <div class="daterange daterange-inline" data-format="MMMM D, YYYY" data-start-date="{{ "now"|date_modify("-30 days")|date("F j, Y") }}" data-end-date="{{ "now"|date("F j, Y") }}" data-callback="">
                                             <i class="entypo-calendar"></i>
                                            <span>{{ t('file_manager_select_range', 'Select range...') }}</span>
                                        </div>
                                        <input type="hidden" name="filterUploadedDateRange" id="filterUploadedDateRange" value=""/>
                                        <input type="hidden" class="form-control" name="filterText" id="filterText" placeholder="search..." value="">
                                    </div>
                                </div>
                                
                              
                    
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ t('close', 'Close') }}</button>
                <button type="button" class="btn btn-warning" onClick="handleTopSearch(null, $('#filterText'), true);
                        return false;">{{ t('search', 'Search') }} <i class="entypo-search"></i></button>
            </div>
        </div>
    </div>
</div>

